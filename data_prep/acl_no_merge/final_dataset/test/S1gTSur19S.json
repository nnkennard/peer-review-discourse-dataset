    {
      "review_id": "S1gTSur19S",
      "rebuttal_id": "BJgxTZgSir",
      "sentence_index": 9,
      "text": "Our convergence analysis is done for non-convex objective functions (similar to that of Yan et al. and Bernstein et al.).",
      "suffix": "",
      "coarse": "nonarg",
      "fine": "rebuttal_summary",
      "alignment": [
        "context_sentences",
