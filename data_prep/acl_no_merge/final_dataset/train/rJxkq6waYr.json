    {
      "review_id": "rJxkq6waYr",
      "rebuttal_id": "HkemB2WXiB",
      "sentence_index": 10,
      "text": "A common criticism of this analogy is that SGD noise is not Gaussian when the batch size is small.",
      "suffix": "",
      "coarse": "dispute",
