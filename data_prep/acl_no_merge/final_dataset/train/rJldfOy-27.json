    {
      "review_id": "rJldfOy-27",
      "rebuttal_id": "ryezm5-70X",
      "sentence_index": 36,
      "text": "Equation (6) defines the posterior of the network given the embedding, which we maximize w.r.t. the embedding.",
      "suffix": "",
      "coarse": "concur",
      "fine": "rebuttal_answer",
      "alignment": [
        "context_sentences",
