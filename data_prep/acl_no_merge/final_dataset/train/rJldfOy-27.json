    {
      "review_id": "rJldfOy-27",
      "rebuttal_id": "ryezm5-70X",
      "sentence_index": 14,
      "text": "We apologize for having been a bit brief here, we will clarify this in the revision (uploaded asap).",
      "suffix": "",
      "coarse": "concur",
      "fine": "rebuttal_by-cr",
