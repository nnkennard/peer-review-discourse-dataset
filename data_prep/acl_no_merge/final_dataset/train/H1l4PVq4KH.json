    },
    {
      "review_id": "H1l4PVq4KH",
      "rebuttal_id": "rygR36nHjr",
      "sentence_index": 4,
      "text": "2. Each component described in Figure 1 is not explained enough.",
      "suffix": "",
      "coarse": "nonarg",
      "fine": "rebuttal_structuring",
      "alignment": [
        "context_sentences",
        [
          3,
