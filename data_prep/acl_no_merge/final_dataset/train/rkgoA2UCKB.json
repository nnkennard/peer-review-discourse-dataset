        ]
      ],
      "details": {}
    },
    {
      "review_id": "rkgoA2UCKB",
      "rebuttal_id": "ByeBzTMtiS",
      "sentence_index": 17,
      "text": "We agree that these are still too short to be called videos.",
      "suffix": "",
      "coarse": "concur",
