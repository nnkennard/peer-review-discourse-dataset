      ],
      "details": {}
    },
    {
      "review_id": "rkgoA2UCKB",
      "rebuttal_id": "ByeBzTMtiS",
      "sentence_index": 14,
      "text": "3.",
      "suffix": "",
      "coarse": "nonarg",
