      "coarse": "concur",
      "fine": "rebuttal_answer",
      "alignment": [
        "context_sentences",
        [
          10
        ]
      ],
      "details": {}
    },
    {
      "review_id": "Skx-jEBr5B",
      "rebuttal_id": "Hyl3QZqMjS",
      "sentence_index": 25,
      "text": "Then we transform it back into time domain.",
