      "text": "https://docs.google.com/viewer?url=https://raw.githubusercontent.com/anon181018/iclr2019_rebuttal/master/figure1.pdf",
      "suffix": "\n\n",
      "coarse": "nonarg",
      "fine": "rebuttal_summary",
