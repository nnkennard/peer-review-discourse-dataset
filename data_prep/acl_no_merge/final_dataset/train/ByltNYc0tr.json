    {
      "review_id": "ByltNYc0tr",
      "sentence_index": 10,
      "text": "-\tWhile this is a new and interesting task, the contribution (as discussed above in \u201cpros\u201d above) is somewhat limited.",
      "suffix": "",
      "coarse": "arg_evaluative",
      "fine": "none",
