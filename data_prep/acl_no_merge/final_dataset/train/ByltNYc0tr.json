      "coarse": "concur",
      "fine": "rebuttal_answer",
      "alignment": [
        "context_sentences",
        [
          10
        ]
      ],
      "details": {}
    },
    {
      "review_id": "ByltNYc0tr",
      "rebuttal_id": "rylgzEOqsB",
      "sentence_index": 17,
      "text": "To support this line of research, our work introduces a dataset that focuses explicitly on this important reasoning capability.",
      "suffix": "",
      "coarse": "concur",
