      "pol": "none"
    },
    {
      "review_id": "ByltNYc0tr",
      "sentence_index": 2,
      "text": "-\tThe proposed task is interesting and well motivated.",
      "suffix": "",
      "coarse": "arg_evaluative",
      "fine": "none",
      "asp": "asp_motivation-impact",
      "pol": "pol_positive"
