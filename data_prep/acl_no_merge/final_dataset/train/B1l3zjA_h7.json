    },
    {
      "review_id": "B1l3zjA_h7",
      "rebuttal_id": "SyxFgYgiTQ",
      "sentence_index": 36,
      "text": "Now if we apply vanilla gradient updates this can skew the sampling distribution in random directions.",
      "suffix": "",
      "coarse": "concur",
      "fine": "rebuttal_answer",
      "alignment": [
        "context_sentences",
        [
