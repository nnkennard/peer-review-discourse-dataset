    },
    {
      "review_id": "B1l3zjA_h7",
      "rebuttal_id": "SyxFgYgiTQ",
      "sentence_index": 32,
      "text": "is that they protect against sampling biases.",
      "suffix": "",
      "coarse": "concur",
