    {
      "review_id": "HJl_1dRl5r",
      "rebuttal_id": "SkxT1pNwir",
      "sentence_index": 3,
      "text": "Below are answers resultant from eq. 5 to the specific questions the referee raised, with some added definitions to make them concrete.",
      "suffix": "\n\n",
      "coarse": "nonarg",
