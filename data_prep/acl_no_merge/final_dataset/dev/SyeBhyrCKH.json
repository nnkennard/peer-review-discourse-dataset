    },
    {
      "review_id": "SyeBhyrCKH",
      "rebuttal_id": "BklfnX1KsH",
      "sentence_index": 3,
      "text": "The new things offered by Time2Vec compared to positional encoding and other previous work include:",
      "suffix": "\n\n",
      "coarse": "concur",
      "fine": "rebuttal_answer",
      "alignment": [
        "context_sentences",
        [
          4
        ]
      ],
