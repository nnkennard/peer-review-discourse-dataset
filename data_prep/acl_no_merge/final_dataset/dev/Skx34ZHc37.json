    {
      "review_id": "Skx34ZHc37",
      "rebuttal_id": "rkxr33DOTm",
      "sentence_index": 23,
      "text": "-Q: Actionable consequences from paper:",
      "suffix": "\n",
      "coarse": "nonarg",
