        ]
      ],
      "details": {}
    },
    {
      "review_id": "rygtop9XcS",
      "rebuttal_id": "rJxCwMrOsS",
      "sentence_index": 11,
      "text": "Note that these joining rankings are done separately per subplot (ie modulation class).",
      "suffix": "\n",
      "coarse": "concur",
      "fine": "rebuttal_answer",
      "alignment": [
        "context_sentences",
        [
          15,
