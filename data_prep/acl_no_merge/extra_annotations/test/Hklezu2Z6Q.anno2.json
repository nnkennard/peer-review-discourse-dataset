    {
      "review_id": "Hklezu2Z6Q",
      "rebuttal_id": "H1gYO-8SC7",
      "sentence_index": 16,
      "text": "In our setting, both RSN and ASN perform several steps of gradient descent with stochastic mini-batch samples.",
      "suffix": "",
      "coarse": "concur",
      "fine": "rebuttal_answer",
      "alignment": [
        "context_sentences",
        [
          21
        ]
