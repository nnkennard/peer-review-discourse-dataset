      ],
      "details": {
        "manuscript_change": true
      }
    },
    {
      "review_id": "B1eVKwraFH",
      "rebuttal_id": "Sye1hVSDjS",
      "sentence_index": 20,
      "text": "4.",
      "suffix": "",
      "coarse": "nonarg",
      "fine": "rebuttal_structuring",
      "alignment": [
