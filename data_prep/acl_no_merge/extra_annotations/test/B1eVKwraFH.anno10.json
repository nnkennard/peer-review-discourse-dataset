    {
      "review_id": "B1eVKwraFH",
      "rebuttal_id": "Sye1hVSDjS",
      "sentence_index": 21,
      "text": "Indeed, comparisons to the results in [1][2] would be interesting.",
      "suffix": "",
      "coarse": "dispute",
      "fine": "rebuttal_reject-request",
      "alignment": [
        "context_sentences",
