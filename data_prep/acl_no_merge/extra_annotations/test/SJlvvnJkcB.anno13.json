    {
      "review_id": "SJlvvnJkcB",
      "rebuttal_id": "ryeNd3WQsr",
      "sentence_index": 5,
      "text": "- To the best of our knowledge, our specific implementation of entity pre-training is novel.",
      "suffix": "",
      "coarse": "dispute",
      "fine": "rebuttal_mitigate-criticism",
      "alignment": [
        "context_sentences",
