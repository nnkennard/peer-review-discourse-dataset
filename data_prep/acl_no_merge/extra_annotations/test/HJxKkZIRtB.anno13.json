    {
      "review_id": "HJxKkZIRtB",
      "rebuttal_id": "Bkg8JkNJsB",
      "sentence_index": 11,
      "text": "Finally, it is well known that contextual embeddings outperform distributed embeddings on a wide range of NLP tasks, including NER [3].",
      "suffix": "",
      "coarse": "concur",
      "fine": "rebuttal_answer",
      "alignment": [
        "context_sentences",
        [
          9
        ]
      ],
      "details": {}
    },
